@{
    ViewData["Title"] = "Contacto";
}

<div class="text-center">
    <h1 class="mb-4">Contáctanos</h1>
    <p class="lead">¿Tienes dudas o quieres compartir tu experiencia? Escríbenos.</p>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <form>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nombre" placeholder="Tu nombre" />
            </div>
            <div class="mb-3">
                <label for="correo" class="form-label">Correo electrónico</label>
                <input type="email" class="form-control" id="correo" placeholder="nombre@ejemplo.com" />
            </div>
            <div class="mb-3">
                <label for="mensaje" class="form-label">Mensaje</label>
                <textarea class="form-control" id="mensaje" rows="4" placeholder="Escribe tu mensaje aquí"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
    <div class="col-md-6 d-flex flex-column justify-content-center">
        <h3>Información de contacto</h3>
        <p><strong>Teléfono:</strong> +57 320 123 4567</p>
        <p><strong>Dirección:</strong> Calle Salud #123, Bogotá, Colombia</p>
        <p><strong>Email:</strong> contacto@Maternidad.com</p>
    </div>
</div>
