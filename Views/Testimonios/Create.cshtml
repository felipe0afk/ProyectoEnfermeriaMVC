@model ProyectoEnfermeriaMVC.Models.Testimonio

@{
    ViewData["Title"] = "Nuevo Testimonio";
}
<h2>Deja tu Testimonio</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Mensaje</label>
        <textarea asp-for="Mensaje" class="form-control"></textarea>
    </div>
    <button class="btn btn-success">Guardar</button>
</form>
