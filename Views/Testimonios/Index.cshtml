@model IEnumerable<ProyectoEnfermeriaMVC.Models.Testimonio>

@{
    ViewData["Title"] = "Testimonios";
}
<h2>Lo Que Dicen Nuestros Usuarios</h2>
<a class="btn btn-primary mb-3" href="/Testimonios/Create">Agregar Testimonio</a>

<ul class="list-group">
    @foreach (var t in Model)
    {
        <li class="list-group-item">
            <strong>@t.Nombre:</strong> @t.Mensaje
        </li>
    }
</ul>
